@model TravelApp.ViewModel.AdminView

@{
    ViewBag.Title = "EditPlane";
    Layout = "~/Views/Shared/_MyDefaultLayout.cshtml";
}

<div class="container">
    <h3>Edit Plane</h3>
    <form action="@Url.Content("~/SubmitPlaneEdition")" method="post" class="form-control m-md-4">
        @*<h5 class="text-danger">@ViewBag.SameIdFlight</h5>*@
        <div class="mb-3">
            <label for="PlaneType" class="form-label">Plane Type</label>
            <input type="text" class="form-control" id="PlaneType" name="plane.PlaneType" value="@Model.plane.PlaneType">
            <div class="form-text">@Html.ValidationMessageFor(x => x.plane.PlaneType)</div>
        </div>

        <div class="mb-3">
            <label for="NumSeats" class="form-label">Number of Seats</label>
            <input type="text" class="form-control" id="NumSeats" name="plane.NumSeats" value="@Model.plane.NumSeats">
            <div class="form-text">@Html.ValidationMessageFor(x => x.plane.NumSeats)</div>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>

