            <div class="dropdown dropstart">
                <button type="button" class="btn btn-primary mx-2" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                    Enter for User
                </button>
                <div class="dropdown-menu">
                    <form class="px-4 py-3" action="@Url.Content("~/Home/UserSignIn")" method="post">
                        @if (ViewBag.noUser != null)
                        {
                            <div class="text-danger form-text">@ViewBag.noUser</div>
                        }
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email address</label>
                            <input name="email" type="email" class="form-control" id="Email" placeholder="email@example.com">
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input name="password" type="password" class="form-control" id="Password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/newUser">Haven't been here? Sign up</a>
                    <a class="dropdown-item" href="/newUserPassword">Forgot password?</a>
                </div>
            </div>


                <div class="dropdown dropstart">
                    <button type="button" class="btn btn-primary" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                        Enter for Admin
                    </button>
                    <div class="dropdown-menu">
                        <form class="px-4 py-3" action="@Url.Content("~/Home/SignIn")" method="post">
                            @if (ViewBag.noUser != null)
                            {
                                <div class="text-danger form-text">@ViewBag.noUser</div>
                            }
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email address</label>
                                <input name="email" type="email" class="form-control" id="Email" placeholder="email@example.com">
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input name="password" type="password" class="form-control" id="Password" placeholder="Password">
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="dropdownCheck" name="sendEmail" value="true">
                                <label class="form-check-label" for="dropdownCheck">
                                    Send to Email
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="dropdownCheck" name="sendSms" value="true">
                                <label class="form-check-label" for="dropdownCheck">
                                    Send to Phone
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </form>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/newAdmin">Have a secret code? Sign up</a>
                        <a class="dropdown-item" href="/newUserPassword">Forgot password?</a>
                    </div>
                </div>
            }
            else
            {
                <form action="/Home/SignOut" method="post">
                    <input class="btn btn-primary" type="submit" value="SignOut">
                </form>
            }
        </div>
    </div>
